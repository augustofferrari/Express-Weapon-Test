generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

enum WeaponSize{
  SMALL
  MID
  BIG
}


model WeaponType {
  
  id  String @id @default(uuid())
  name String
  size WeaponSize @default(SMALL)
  isRangedWeapon Boolean @map("is_ranged_weapon")
  weapons Weapon[]


  @@map("weapon_types")
}


model Weapon{
  id String @id @default(uuid())
  name String 
  description String
  price Float
  attack Int @default(1)
  isOneHand Boolean @default(false) @map("is_one_hand")
  
  //Weapon type relation
  weaponType WeaponType @relation(fields: [weaponTypeId], references:[id])
  weaponTypeId String @map("weapon_type_id")


  @@map("weapons")
}

model User {
  id String @id @default(uuid())
  email String @unique
  firstName String @map("first_name")
  lastName String @map("last_name")
  username String
  password String
  token AuthToken?
  roles UserRoles[]
  permissions UserPermissions[]
  @@map("users")
}

model Role {
  id String @id @default(uuid())
  name String @unique
  description String @unique
  users UserRoles[]

  @@map("role")
}

model AuthToken{
  token String @id 
  user User @relation(fields: [userId], references: [id])
  userId String @unique @map("user_id")
  created DateTime @default(now())
  expirationDate DateTime @default(now()) @map("expiration_time")

  @@map("auth_token")
}


model UserRoles{
  id String @id @default(uuid())
  user User @relation(fields: [userId], references: [id])
  userId String @map("user_id") 
  role Role @relation(fields: [roleId], references: [id])
  roleId String @map("role_id")
  created DateTime @default(now())

  @@map("user_role")
}


model Permissions{
  id String @id @default(uuid())
  name String @unique
  users UserPermissions[]

  @@map("permission")
}

model UserPermissions{
  id String @id @default(uuid())  
  userId String @map("user_id") 
  permissionId String @map("permission_id")

  user User @relation(fields: [userId], references: [id])
  permission Permissions @relation(fields: [permissionId], references: [id])

  @@map("user_permission")
}










